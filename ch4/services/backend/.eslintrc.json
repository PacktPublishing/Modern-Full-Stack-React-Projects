{
  "root": true,
  "env": {
    "node": true
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"]
    }
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:import/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "rules": {
    "import/order": [
      "error",
      {
        "newlines-between": "always"
      }
    ]
  }
}
